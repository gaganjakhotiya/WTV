{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "listFiles": true,
        "sourceMap": false,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "noImplicitUseStrict": true,
        "allowUnreachableCode": false,
        "experimentalDecorators": false,
        "lib": ["es5", "es2015.promise", "dom"]
    },
    "exclude": [
        "node_modules",
        "typings",
        "build"
    ]
}
